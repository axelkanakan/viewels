<div class="row">
<div class="col-md-3 col-md-offset-4">

<legend><h2>Resend unlock instructions</h2></legend>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control' %></div>

  <div class="form-group"><%= f.submit "Resend unlock instructions", class: 'btn btn-info' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>