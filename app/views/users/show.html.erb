<div class="col-md-10 col-md-offset-1">
	<div class="row">
    <div class="col-md-12">
    <div class="col-md-6">
      <div class="row">
    	<div class="col-md-6">
     
    	<%if current_user.avatar?%>	
        <%=image_tag current_user.avatar.pro.url, class: "thumbnail"%>
        <%else%>
        <%= image_tag "anon2.jpg",class: 'thumbnail'%>
        <% end %>
    	</div>
    	<div class="col-md-6">
          <h3><b><%= current_user.email %></b></h3>  
          <P><i><%= current_user.viewels.count %> viewls</i></p>
          <%= link_to 'Add viewl', new_viewel_path, class: 'btn btn-primary' %>
          <%= link_to 'My viewls', personal_path, class: 'btn btn-success' %>
          <%= link_to 'Vstream', root_path, class: 'btn btn-info', id: "space"%>

    	</div>
       </div>
    </div>
    <div class="col-md-6">

    </div>
    <div class="col-md-12">
       	<ul class="nav nav-pills">
          <li class="active"><a href="#viewls" data-toggle="tab"><%=current_user.viewels.count%> Viewls</a></li>
            <li><a href="#following" data-toggle="tab"><%= @followed_viewels.count %> Follows</a></li>
            <li><a href="#secret" data-toggle="tab"><%= @my_viewels_p.count %> Secrets</a></li>
        </ul>
        <hr>
        <div class="tab-content">
         <div class="tab-pane active" id="viewls">
         	
         	  <%= render partial: "viewls" %>
         	
         </div>
         <div class="tab-pane" id="following">
            <%= render partial: "following" %>
         </div>

         <div class="tab-pane" id="secret">
           <%= render partial: "secret" %>
         </div>




        </div>
    </div>
    </div>
	</div>
	
</div>