<div class="col-md-2">

  <div class="row">
    <div class="col-md-12">
   
	  <% if current_user.avatar? %>
	    <%= image_tag current_user.avatar.small.url, class: 'thumbnail' %>
     
      <% else %>
       <%= image_tag 'anon.jpg', class: 'thumbnail' %>
        <% end %>
     </div>
  </div>
  <%= link_to 'Add viewl', new_viewel_path, class: 'btn btn-primary' %>

  <%= link_to 'My viewls', personal_path, class: 'btn btn-success', id: 'space' %>
</div>

<div class="col-md-8">
	<h1 style="text-align:center;"><b>Vstream</b></h1>
	<hr>
	<div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% @followed_viewels.each do |viewel| %>
      <%= viewel.body_html %>
      <p><%= viewel.user.email %></p> 
    <% end %>
 </div>
</div>
</div>


<div class="col-md-2">
  <div class="row">
    <div class="col-md-12">

    	<% @users.each do |user| %>
    	<% if user.avatar?%>
    	<%= image_tag user.avatar.small.url, class: 'thumbnail', id: 'space' %>
    	<% else %>
    	<%= image_tag 'anon.jpg', class: 'thumbnail', id: 'space' %>
    	<% end %>
    	<small>
          <%= user.email %><br>
    	</small>
    	<% if current_user.following?(user) %>
     	<%= link_to "Unfollow", unfollow_user_path(user), class: 'btn btn-danger', id:'space' %>
    	<% else %>
    	<%= link_to "Follow", follow_user_path(user), class: 'btn btn-primary', id:'space'%>
       <% end %>
    <% end %>
    </div>
	</div>
</div>











